{
  "permissions": {
    "allow": [
      "mcp__serena__list_dir",
      "mcp__serena__read_memory"
    ]
  },
  "enabledMcpjsonServers": [
    "filesystem",
    "github",
    "fetch",
    "serena",
    "cipher"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "stop",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      }
    ],
    "AssistantResponseComplete": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}